<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/caculation"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="20dp"
        android:textColor="#7b7e7e"
        android:textAlignment="textEnd"
        android:textSize="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginRight="20dp"
        android:textColor="#000000"
        android:textAlignment="textEnd"
        android:textSize="90dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/caculation"  />


    <Button
        android:id="@+id/btnCE"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="6dp"
        android:backgroundTint="#e6e6e6"
        android:textColor="#535353"
        android:text="CE"
        android:textSize="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result"/>
    <Button
        android:id="@+id/btnC"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="6dp"
        android:backgroundTint="#e6e6e6"
        android:textColor="#535353"
        android:text="C"
        android:textSize="25dp"
        app:layout_constraintLeft_toRightOf="@id/btnCE"
        app:layout_constraintTop_toBottomOf="@id/result"/>
    <ImageButton
        android:id="@+id/btnBackspace"
        android:layout_width="102dp"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="3dp"
        android:backgroundTint="#e6e6e6"
        android:src="@drawable/ic_icon_backspace"
        app:layout_constraintLeft_toRightOf="@id/btnC"
        app:layout_constraintTop_toBottomOf="@id/result"/>

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="7dp"
        android:backgroundTint="#e6e6e6"
        android:textColor="#535353"
        android:text="รท"
        android:textSize="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result"/>

    <Button
        android:id="@+id/btn7"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_marginTop="-6dp"
        android:layout_marginLeft="6dp"
        android:backgroundTint="#ffffff"
        android:textColor="#000000"
        android:text="7"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnCE"/>
    <Button
        android:id="@+id/btn8"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_marginTop="-6dp"
        android:layout_marginLeft="6dp"
        android:backgroundTint="#ffffff"
        android:textColor="#000000"
        android:text="8"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@id/btn7"
        app:layout_constraintTop_toBottomOf="@id/btnCE"/>
    <Button
        android:id="@+id/btn9"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_marginTop="-6dp"
        android:layout_marginLeft="6dp"
        android:backgroundTint="#ffffff"
        android:textColor="#000000"
        android:text="9"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@id/btn8"
        app:layout_constraintTop_toBottomOf="@id/btnC"/>
    <Button
        android:id="@+id/btnMulti"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_marginTop="-6dp"
        android:layout_marginLeft="6dp"
        android:backgroundTint="#e6e6e6"
        android:textColor="#535353"
        android:text="ร"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@id/btn9"
        app:layout_constraintTop_toBottomOf="@id/btnDiv"/>
    <Button
        android:id="@+id/btn4"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_marginTop="-6dp"
        android:layout_marginLeft="6dp"
        android:backgroundTint="#ffffff"
        android:textColor="#000000"
        android:text="4"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn7"/>
    <Button
        android:id="@+id/btn5"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_marginTop="-6dp"
        android:layout_marginLeft="6dp"
        android:backgroundTint="#ffffff"
        android:textColor="#000000"
        android:text="5"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@id/btn4"
        app:layout_constraintTop_toBottomOf="@id/btn8"/>
    <Button
        android:id="@+id/btn6"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_marginTop="-6dp"
        android:layout_marginLeft="6dp"
        android:backgroundTint="#ffffff"
        android:textColor="#000000"
        android:text="6"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@id/btn5"
        app:layout_constraintTop_toBottomOf="@id/btn9"/>
    <Button
        android:id="@+id/btnSub"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_marginTop="-6dp"
        android:layout_marginLeft="6dp"
        android:backgroundTint="#e6e6e6"
        android:textColor="#535353"
        android:text="-"
        android:textSize="35dp"
        app:layout_constraintLeft_toRightOf="@id/btn6"
        app:layout_constraintTop_toBottomOf="@id/btnMulti"/>
    <Button
        android:id="@+id/btn1"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_marginTop="-6dp"
        android:layout_marginLeft="6dp"
        android:backgroundTint="#ffffff"
        android:textColor="#000000"
        android:text="1"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn5"/>
    <Button
        android:id="@+id/btn2"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_marginTop="-6dp"
        android:layout_marginLeft="6dp"
        android:backgroundTint="#ffffff"
        android:textColor="#000000"
        android:text="2"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@id/btn1"
        app:layout_constraintTop_toBottomOf="@id/btn5"/>
    <Button
        android:id="@+id/btn3"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_marginTop="-6dp"
        android:layout_marginLeft="6dp"
        android:backgroundTint="#ffffff"
        android:textColor="#000000"
        android:text="3"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@id/btn2"
        app:layout_constraintTop_toBottomOf="@id/btn6"/>
    <Button
        android:id="@+id/btnAdd"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_marginTop="-6dp"
        android:layout_marginLeft="6dp"
        android:backgroundTint="#e6e6e6"
        android:textColor="#535353"
        android:text="+"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@id/btn3"
        app:layout_constraintTop_toBottomOf="@id/btnSub"/>
    <Button
        android:id="@+id/btnSigned"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_marginTop="-6dp"
        android:layout_marginLeft="6dp"
        android:backgroundTint="#ffffff"
        android:textColor="#000000"
        android:text="+/-"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn1"/>
    <Button
        android:id="@+id/btn0"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_marginTop="-6dp"
        android:layout_marginLeft="6dp"
        android:backgroundTint="#ffffff"
        android:textColor="#000000"
        android:text="0"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@id/btnSigned"
        app:layout_constraintTop_toBottomOf="@id/btn2"/>
    <Button
        android:id="@+id/btnPoint"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_marginTop="-6dp"
        android:layout_marginLeft="6dp"
        android:backgroundTint="#ffffff"
        android:textColor="#000000"
        android:text="."
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@id/btn0"
        app:layout_constraintTop_toBottomOf="@id/btn3"/>
    <Button
        android:id="@+id/btnEqual"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_marginTop="-6dp"
        android:layout_marginLeft="6dp"
        android:backgroundTint="#a8e5bd"
        android:textColor="#535353"
        android:text="="
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@id/btnPoint"
        app:layout_constraintTop_toBottomOf="@id/btnAdd"/>

</androidx.constraintlayout.widget.ConstraintLayout>